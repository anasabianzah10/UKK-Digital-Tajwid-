<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="anas.app.digitaltajwid.HomeActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView17"
        android:layout_gravity="center"
        android:src="@drawable/home1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#1E824C"
        android:textColor="#ffffff"
        android:text="Belajar Tajwid"
        android:onClick="#ffffff"
        android:id="@+id/belajar"
        android:layout_below="@+id/imageView17"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#1E824C"
        android:textColor="#ffffff"
        android:text="Latihan Tajwid"
        android:id="@+id/latihan"
        android:layout_below="@+id/belajar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Keluar"
            android:background="#1E824C"
            android:textColor="#ffffff"
            android:id="@+id/keluar" />
    </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Solution Media Â© 2015"
        android:textColor="@color/abc_background_cache_hint_selector_material_dark"
        android:id="@+id/texthome"
        android:layout_below="@+id/imageView"
        android:gravity="bottom|center_horizontal"/>


</RelativeLayout>
